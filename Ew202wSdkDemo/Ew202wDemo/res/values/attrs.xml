<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="wheelview2">
        <attr name="gravity">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="textColorOut" format="color" />
        <attr name="textColorCenter" format="color" />
        <attr name="dividerColor" format="color" />
    </declare-styleable>
    
        <declare-styleable name="WheelView">
        <attr name="android:background" />
        <attr name="draw_shadow" format="boolean" />
        <attr name="draw_center_bg" format="boolean" />
        <attr name="item_text_size" format="dimension" />
        <attr name="selected_text_size" format="dimension" />
        <attr name="item_text_color" format="color" />
        <attr name="selected_text_color" format="color" />
        <attr name="bold_text" format="boolean" />
    </declare-styleable>
     <declare-styleable name="ScoreBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="showProgressTip" format="boolean" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

</resources>